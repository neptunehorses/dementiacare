{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/styles.css",
            "headers": {
                "cache-control": "no-cache, no-store, must-revalidate"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
} 